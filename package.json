{
  "name": "typescript.koans",
  "version": "1.0.0",
  "description": "learn TypeScript the right way",
  "main": "index.js",
  "scripts": {
    "pretest": "npm install",
    "prestart": "npm install",
    "test": "mocha test/*.test.ts",
    "start": "npm run lint && npm run test:watch",
    "test:watch": "npm test -- --watch",
    "build": "tsc --pretty",
    "build:watch": "tsc --pretty --watch",
    "lint": "tslint \"./src/00_intro.ts\" --formatters-dir=\"./node_modules/tslint-stylish\" --format=\"stylish\"   --exclude=\"./test/*.ts\" ",
    "build:web": "webpack --watch",
    "live": "live-server",
    "web": "npm-run-all --parallel build:web live"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hackages/typescript.koans.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hackages/typescript.koans/issues"
  },
  "homepage": "https://github.com/hackages/typescript.koans#readme",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.32",
    "@types/sinon": "^1.16.31",
    "chai": "^3.5.0",
    "live-server": "^1.1.0",
    "mocha": "^3.1.2",
    "npm-run-all": "^3.1.1",
    "sinon": "^1.17.6",
    "ts-loader": "^1.2.2",
    "ts-node": "^1.6.0",
    "ts-node-warnings": "^1.6.0",
    "tslint": "^3.15.1",
    "tslint-stylish": "^2.1.0-beta",
    "typescript": "^2.0.3"
  }
}
